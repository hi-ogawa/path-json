{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build/tsc",
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["ES2021"],
    "types": [],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}
